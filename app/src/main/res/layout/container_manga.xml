<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginHorizontal="10dp"
    android:background="@drawable/bg_item">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/imageMangaPoster"
        android:layout_width="112.5dp"
        android:layout_height="160dp"
        android:scaleType="fitXY"
        android:background="@drawable/bg_item"
        android:backgroundTint="@color/black"
        app:riv_corner_radius="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/textMangaName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginHorizontal="5dp"
        android:maxLines="1"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageMangaPoster"/>

    <ProgressBar
        android:id="@+id/loadingMangaItem"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/imageMangaPoster"
        app:layout_constraintEnd_toEndOf="@+id/imageMangaPoster"
        app:layout_constraintTop_toTopOf="@+id/imageMangaPoster"
        app:layout_constraintBottom_toBottomOf="@+id/imageMangaPoster"/>

</androidx.constraintlayout.widget.ConstraintLayout>